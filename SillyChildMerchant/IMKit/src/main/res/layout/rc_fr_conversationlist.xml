<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/rc_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rc_status_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffdfdf"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/rc_status_bar_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:indeterminateDrawable="@drawable/rc_notification_network_available"
            android:paddingLeft="27dp" />

        <TextView
            android:id="@+id/rc_status_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:text="@string/rc_notice_network_unavailable"
            android:textColor="#776868"
            android:textSize="14sp" />
    </LinearLayout>

    <ListView
        android:id="@id/rc_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rc_status_bar"
        android:background="@color/rc_item_conversation_background"
        android:divider="@color/rc_item_conversation_background"
        android:dividerHeight="@dimen/rc_dimen_size_10"
        android:listSelector="@drawable/rc_item_conversation_background"
        android:paddingLeft="@dimen/rc_dimen_size_10"
        android:paddingRight="@dimen/rc_dimen_size_10"
        android:paddingTop="@dimen/rc_dimen_size_10"
        android:scrollbars="none"
        tools:listitem="@layout/rc_item_conversation" />


    <LinearLayout
        android:id="@+id/rc_conversation_list_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@mipmap/no_data" />

        <TextView
            android:id="@+id/rc_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/rc_conversation_list_empty_prompt"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>