<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView style="@style/DividerWidth" />

    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_waitingPayment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen60"
                android:background="@color/fF2626Colors"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen35"
                android:paddingRight="@dimen/dimen35"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_waitingPayment"
                    style="@style/MatchWrap"
                    android:text="@string/waitingPayment"
                    android:textColor="@color/whiteColors"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/tv_lateCancelled"
                    style="@style/MatchWrap"
                    android:paddingTop="@dimen/dimen3"
                    android:text="@string/lateCancelled"
                    android:textColor="@color/whiteColors"
                    android:textSize="@dimen/textsize10" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_waitSending"
                style="@style/Match50"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_waitSending"
                    style="@style/Image20"
                    android:src="@mipmap/order_to_be_shipped_icon" />

                <TextView
                    android:id="@+id/tv_waitSending"
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="@string/waitSending"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_courierName"
                    style="@style/AutoWrap"
                    android:gravity="right"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="顺丰快递"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13"
                    android:visibility="gone" />


            </LinearLayout>

            <View style="@style/DividerWidth" />

            <TextView
                android:id="@+id/tv_orderCourierInformation"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10"
                android:text="您的订单已进入库房，准备出库"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize13"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_orderCourierTime"
                style="@style/MatchWrap"
                android:layout_marginBottom="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10"
                android:singleLine="true"
                android:text="2018-04-30  13:32"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize13"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_name"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen14"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen10"
                android:paddingTop="@dimen/dimen14"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/WrapWrap"
                    android:maxWidth="@dimen/dimen170"
                    android:text="小仙女"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize16" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/WrapWrap"
                    android:maxWidth="@dimen/dimen130"
                    android:paddingLeft="@dimen/dimen12"
                    android:text="138****6699"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize16" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_address"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/dimen12"
                    android:layout_height="@dimen/dimen17"
                    android:layout_marginBottom="@dimen/dimen31"
                    android:src="@mipmap/mineicon_locationxxx" />

                <LinearLayout
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/WrapWrap"
                        android:maxWidth="@dimen/dimen300"
                        android:text="上海市 闵行区 放鹤路1088号"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize13" />

                    <TextView
                        android:id="@+id/tv_detailedAddress"
                        style="@style/WrapWrap"
                        android:layout_marginTop="@dimen/dimen5"
                        android:maxWidth="@dimen/dimen300"
                        android:text="博济园区7号楼301"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize13" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen14"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen14"
                android:text="@string/commodityInformation"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />

            <View style="@style/DividerWidth" />

            <com.common.cklibrary.utils.myview.ChildListView
                android:id="@+id/lv_shopGoods"
                style="@style/MatchWrap"
                android:divider="@color/background"
                android:dividerHeight="@dimen/dimen1"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:listitem="@layout/item_shopgoodsup" />

            <TextView
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen14"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen14"
                android:text="@string/orderInformation"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />

            <View style="@style/DividerWidth" />

            <LinearLayout

                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/goodsTogether"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_goodsMoney"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="¥1314.00"
                    android:textColor="@color/fF0000Colors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/freight1"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_freightMoney"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen45"
                    android:singleLine="true"
                    android:text="¥20.00"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingBottom="@dimen/dimen10"
                    android:text="@string/coupons1"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_couponsMoney"
                    style="@style/AutoWrap"
                    android:paddingBottom="@dimen/dimen10"
                    android:paddingLeft="@dimen/dimen32"
                    android:singleLine="true"
                    android:text="¥14.00"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <ImageView
                    android:layout_width="@dimen/dimen5"
                    android:layout_height="@dimen/dimen10"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen6"
                    android:layout_marginTop="@dimen/dimen4"
                    android:src="@mipmap/order_right_arrow"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/preferentialActivities"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_preferentialActivities"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="¥-50.00"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/orderNumber1"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_orderCode"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="201804291350"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/submitTime"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_submitTime"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="2018-04-29 13:50"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_modePayment"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:visibility="gone">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/modePayment"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_modePayment"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="@string/weChatPay"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_amountRealPay"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:visibility="gone">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/amountRealPay"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_amountRealPay"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="¥-50.00"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_paymentTime"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:visibility="gone">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/paymentTime"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_paymentTime"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="2018-04-29  13:50"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_deliveryTime"
                style="@style/MatchWrap"
                android:layout_marginBottom="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:visibility="gone">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/deliveryTime"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_deliveryTime"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen20"
                    android:singleLine="true"
                    android:text="2018-04-29  13:50"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_expressNumber"
                style="@style/Match49"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen15"
                    android:text="@string/expressNumber"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <EditText
                    android:id="@+id/et_expressNumber"
                    style="@style/MatchMatch"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen48"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/shape_express"
                    android:digits="@string/number0"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:textColor="@color/titletextcolors"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="@dimen/textsize13" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_courierCompany"
                style="@style/Match49"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen15"
                    android:text="@string/courierCompany"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_courierCompany"
                    style="@style/MatchMatch"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen48"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/shape_express"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen10"
                    android:text="@string/pleaseSelect"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_confirmDelivery1"
                style="@style/Match40"
                android:layout_marginBottom="@dimen/dimen14"
                android:layout_marginLeft="@dimen/dimen73"
                android:layout_marginRight="@dimen/dimen73"
                android:layout_marginTop="@dimen/dimen15"
                android:background="@drawable/shape_homepagebtn"
                android:gravity="center"
                android:text="@string/confirmDelivery"
                android:textColor="@color/whiteColors"
                android:textSize="@dimen/textsize16"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen10"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <View style="@style/DividerWidth" />

    <include layout="@layout/gooddetails_bottombar" />

</LinearLayout>