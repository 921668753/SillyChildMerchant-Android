<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen15">

    <TextView
        android:id="@+id/tv_productSpecifications"
        style="@style/WrapWrap"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:text="商品规格1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize13" />

    <com.common.cklibrary.utils.myview.NoScrollGridView
        android:id="@+id/gv_productspecifications"
        style="@style/MatchWrap"
        android:horizontalSpacing="0dp"
        android:numColumns="4"
        android:overScrollMode="never"
        android:paddingTop="@dimen/dimen10"
        android:scrollbars="none"
        android:verticalSpacing="0dp"
        tools:listitem="@layout/item_gv_productspecifications" />

    <TextView
        style="@style/WrapWrap"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:paddingTop="@dimen/dimen10"
        android:text="@string/warehouseInventory1"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize15" />

    <EditText
        android:id="@+id/et_warehouseInventory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen38"
        android:layout_marginLeft="@dimen/dimen43"
        android:layout_marginRight="@dimen/dimen43"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/shape_express"
        android:digits="@string/number0"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="@dimen/dimen11"
        android:paddingRight="@dimen/dimen11"
        android:singleLine="true"
        android:textColor="@color/titletextcolors"
        android:textCursorDrawable="@drawable/shape_cursor"
        android:textSize="@dimen/textsize13" />

    <TextView
        style="@style/WrapWrap"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:paddingTop="@dimen/dimen10"
        android:text="@string/commodityPrices"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize15" />


    <EditText
        android:id="@+id/et_commodityPrices"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen38"
        android:layout_marginLeft="@dimen/dimen43"
        android:layout_marginRight="@dimen/dimen43"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/shape_express"
        android:gravity="center_vertical"
        android:inputType="numberDecimal"
        android:paddingLeft="@dimen/dimen11"
        android:paddingRight="@dimen/dimen11"
        android:singleLine="true"
        android:textColor="@color/titletextcolors"
        android:textCursorDrawable="@drawable/shape_cursor"
        android:textSize="@dimen/textsize13" />

</LinearLayout>