<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen10"
    android:paddingRight="@dimen/dimen10">

    <TextView
        android:id="@+id/tv_productParameters"
        android:layout_width="@dimen/dimen60"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen5"
        android:text="@string/productParameters"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize11" />

    <TextView
        style="@style/WrapWrap"
        android:paddingBottom="@dimen/dimen5"
        android:text="ï¼š"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize11" />

    <LinearLayout
        style="@style/MatchMatch"
        android:gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_productParameters"
            style="@style/MatchAuto"
            android:background="@color/whiteColors"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen2"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintColors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize10" />

        <TextView style="@style/DividerWidth" />

    </LinearLayout>


