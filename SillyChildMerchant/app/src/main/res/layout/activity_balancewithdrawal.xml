<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView style="@style/DividerWidth" />


    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/dimen8"
        android:layout_marginRight="@dimen/dimen8"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/shape_homepage"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen15"
        android:paddingTop="@dimen/dimen10">

        <TextView
            style="@style/WrapWrap"
            android:text="@string/withdrawalAmount"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize14" />


        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/WrapWrap"
                android:paddingBottom="@dimen/dimen10"
                android:paddingTop="@dimen/dimen5"
                android:text="@string/renminbi"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize25" />

            <EditText
                style="@style/AutoMatch"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:hint="@string/withdrawalAmount1"
                android:paddingLeft="@dimen/dimen20"
                android:textColor="@color/titletextcolors"
                android:textColorHint="@color/hintColors"
                android:textSize="@dimen/textsize14" />


            <TextView
                style="@style/WrapMatch"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen16"
                android:text="@string/allWithdrawal"
                android:textColor="@color/greenColors"
                android:textSize="@dimen/textsize14" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/Match44"
        android:layout_marginLeft="@dimen/dimen8"
        android:layout_marginRight="@dimen/dimen8"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/shape_homepage"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen15">

        <TextView
            style="@style/WrapWrap"
            android:text="@string/bankName"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize14" />

        <EditText
            style="@style/AutoMatch"
            android:background="@color/whiteColors"
            android:gravity="center_vertical"
            android:hint="@string/bankName1"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen15"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/hintColors"
            android:textSize="@dimen/textsize14" />


    </LinearLayout>


    <LinearLayout
        style="@style/Match44"
        android:layout_marginLeft="@dimen/dimen8"
        android:layout_marginRight="@dimen/dimen8"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/shape_homepage"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen15">

        <TextView
            style="@style/WrapWrap"
            android:text="@string/paymentAccount"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize14" />

        <EditText
            style="@style/AutoMatch"
            android:background="@color/whiteColors"
            android:gravity="center_vertical"
            android:hint="@string/paymentAccount1"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen15"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/hintColors"
            android:textSize="@dimen/textsize14" />


    </LinearLayout>

    <LinearLayout
        style="@style/Match44"
        android:layout_marginLeft="@dimen/dimen8"
        android:layout_marginRight="@dimen/dimen8"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/shape_homepage"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen15">

        <TextView
            style="@style/WrapWrap"
            android:text="@string/accountName"
            android:textColor="@color/titletextcolors"
            android:textSize="@dimen/textsize14" />

        <EditText
            style="@style/AutoMatch"
            android:background="@color/whiteColors"
            android:gravity="center_vertical"
            android:hint="@string/accountName1"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen15"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/hintColors"
            android:textSize="@dimen/textsize14" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirmWithdrawal"
        style="@style/Match40"
        android:layout_marginLeft="@dimen/dimen73"
        android:layout_marginRight="@dimen/dimen73"
        android:layout_marginTop="@dimen/dimen15"
        android:background="@drawable/shape_homepagebtn"
        android:gravity="center"
        android:text="@string/confirmWithdrawal"
        android:textColor="@color/whiteColors"
        android:textSize="@dimen/textsize16" />

</LinearLayout>