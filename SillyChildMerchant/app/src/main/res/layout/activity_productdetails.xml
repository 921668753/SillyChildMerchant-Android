                    android:layout_marginRight="@dimen/dimen10"
                    android:layout_marginTop="@dimen/dimen4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/productSpecifications"
                        android:textColor="@color/titletextcolors"
                        android:textSize="@dimen/textsize14" />

                    <TextView
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen11"
                        android:text="3.5g"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize12" />

                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen10"
                    android:layout_marginTop="@dimen/dimen4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/shopPrice"
                        android:textColor="@color/titletextcolors"
                        android:textSize="@dimen/textsize14" />

                    <TextView
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen11"
                        android:text="300元/3.5g"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize12" />

                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen10"
                    android:layout_marginTop="@dimen/dimen4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/commodityQualityMaterial"
                        android:textColor="@color/titletextcolors"
                        android:textSize="@dimen/textsize14" />

                    <TextView
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen11"
                        android:text="膏状"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize12" />

                </LinearLayout>

                <LinearLayout
