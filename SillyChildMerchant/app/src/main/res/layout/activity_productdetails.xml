                android:paddingRight="@dimen/dimen10">

                <TextView
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/dimen10"
                    android:text="@string/commodityPrices"
                    android:textColor="@color/titletextcolors"
                    android:textSize="@dimen/textsize15" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/dimen11"
                        android:layout_marginRight="@dimen/dimen10"
                        android:text="@string/renminbi"
                        android:textColor="@color/fF0000Colors"
                        android:textSize="@dimen/textsize20"
                        android:textStyle="bold" />

                    <LinearLayout
                        style="@style/MatchWrap"
                        android:orientation="vertical">

                        <EditText
                            style="@style/MatchWrap"
                            android:background="@color/whiteColors"
                            android:paddingLeft="@dimen/dimen11"
                            android:paddingRight="@dimen/dimen11"
                            android:paddingTop="@dimen/dimen5"
